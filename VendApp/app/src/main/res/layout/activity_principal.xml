<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="#ff080043">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:nestedScrollingEnabled="true"
        android:longClickable="false"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:id="@+id/gridLayout"
        android:layout_alignParentBottom="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/ic_launcher"
            android:layout_below="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="VendApp"
            android:id="@+id/textView"
            android:autoText="false"
            android:textColor="#ffffffff"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold|italic"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal" /><![CDATA[

        />





        />

        />



        ]]>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/btRelatorioClientes"
            android:text="CLIENTES"
            android:textColor="@color/menu"
            android:layout_row="3"
            android:layout_column="0"
            android:drawableLeft="@android:drawable/ic_menu_sort_by_size"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/btRelatorioEstoque"
            android:text="PRODUTOS"
            android:textColor="@color/menu"
            android:layout_row="5"
            android:layout_column="0"
            android:drawableLeft="@android:drawable/ic_menu_sort_by_size"/>

        />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/btRelatorioVendas"
            android:text="VENDAS"
            android:textColor="@color/menu"
            android:layout_row="6"
            android:layout_column="0"
            android:drawableLeft="@android:drawable/ic_menu_sort_by_size"/>

    </GridLayout>
</RelativeLayout>