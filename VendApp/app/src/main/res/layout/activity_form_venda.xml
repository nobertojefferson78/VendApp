<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data da venda:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textDataVenda"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/cpDataVenda"
        android:hint="ex.: 09/09/1999"
        android:imeOptions="actionDone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cliente:"
        android:imeOptions="actionNext"
        android:id="@+id/textCliente"/>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cpCompleteCliente"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Produto"
        android:id="@+id/btAddItemProduto" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:id="@+id/list_itemVenda"
        android:layout_weight="0.13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Valor Total:"
        android:id="@+id/textValorTotal"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Valor"
        android:id="@+id/cpValorTotal"
        android:layout_gravity="right" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALVAR"
            android:id="@+id/vendaSalvar"
            android:layout_row="0"
            android:layout_column="0"
            android:drawableLeft="@android:drawable/ic_input_add"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCELAR"
            android:id="@+id/vendaCancelar"
            android:layout_row="0"
            android:layout_column="1"
            android:drawableLeft="@android:drawable/ic_delete"
            />
    </GridLayout>

</LinearLayout>